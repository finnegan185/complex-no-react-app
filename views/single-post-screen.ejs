<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">
  <%- include('includes/flash') %>
  <div class="d-flex justify-content-between">
    <h2><%= post.title %></h2>
    <% if(post.isVisitorOwner) { %>
    <span class="pt-2">
      <a href="/post/<%= post._id %>/edit" class="text-primary mr-2" title="Edit" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-edit"></i></a>
      <form class="delete-post-form d-inline" action="/post/<%= post._id %>/delete" method="POST">
        <button class="delete-post-button text-danger" title="Delete" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-trash"></i></button>
      </form>
    </span>
    <% } %>
  </div>

  <p class="text-muted small mb-4">
    <a href="#"><img title="My Profile" data-toggle="tooltip" data-placement="bottom" style="width: 24px; height: 24px; border-radius: 16px" src="<%= post.author.avatar %>" /></a>
    Posted by <a href="#"><%= post.author.username %></a> on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDate() %>/<%= post.createdDate.getFullYear() %>
  </p>

  <div class="body-content">
    <p><%- filterUserHTML(post.body) %></p>
  </div>
</div>

<%- include('includes/footer') %>
